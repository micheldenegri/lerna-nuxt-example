{
  "name": "lerna-nuxt-example",
  "description": "Nuxt.js Monorepo managed by lerna",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/micheldenegri/lerna-nuxt-example.git"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ]
  },
  "engines": {
    "node": "12.x",
